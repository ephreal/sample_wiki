<h1><%=@title%></h1>
<p><%= escape_content(@content) %></p>
<div>
    <a href="/edit/<%=@title%>">Edit this page</a>
    <form method="post" action="/delete/<%=@title%>">
        <input name="_method" type="hidden" value="delete" />
        <input type="submit" value="Delete this page" />
    </form>
</div>
